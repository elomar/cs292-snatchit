<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :url %>
    <%= f.input :current_value %>
    <%= f.input :picture %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
